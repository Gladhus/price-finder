
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>
  <div class="PFBox">
    <h5>Find the average price of an item</h5>
    <form action="PFRequest form-horizontal">
      <div class="form-group">
        <label for="keywords" class="control-label col-xs-2">Keywords</label>
        <div class="col-sm-9">
          <input type="text" name="keywords" class="form-control PFInput"><br>
        </div>
      </div>
      
      <div class="form-group">
        <label for="tags" class="control-label col-xs-2">Tags</label>
        <div class="col-sm-9">
          <input type="text" name="tags" class="form-control"><br>
        </div>
      </div>

      <div class="form-group">
        <label for="categories" class="control=label col-xs-2">Category</label>
        <div class="col-sm-9">
          <select data-toggle="select" class="form-control select select-primary select-block mbl PFSelect">
            <optgroup label="Cars & vehicles">
              <option value="0">Cars</option>
              <option value="1">Motorcycless</option>
              <option value="2">Boats, watercrafts</option>
              <option value="3">AVTs, snowmobiles</option>
            </optgroup>
            <optgroup label="Computers">
              <option value="4">Desktop computers</option>
              <option value="5">iPads, tablets</option>
              <option value="6">Laptops</option>
              <option value="7">Servers</option>
            </optgroup>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-11">
          <button class="btn btn-primary btn-wide PFSearchBtn">Search the item price</button>
        </div>
      </div>
    </form>
  </div>
